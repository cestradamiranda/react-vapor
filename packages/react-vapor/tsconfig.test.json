{
    "compilerOptions": {
        "inlineSourceMap": true,
        "sourceMap": false,
        "jsx": "react",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "lib": ["es2015", "dom"],
        "skipLibCheck": true,
        "target": "ES5",
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "dist", "coverage", "*.js"]
}
