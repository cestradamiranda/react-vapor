{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/split/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}
