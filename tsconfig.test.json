{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "target": "ES5",
    "plugins": [
    {
      "transform": "ts-transformer-keys/transformer"
    }
  ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ]
}
